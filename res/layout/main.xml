<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/left">

        <!--</RelativeLayout>-->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hello World, MyActivity"
                android:id="@+id/textView"/>
        <EditText
                android:layout_width="132dp"
                android:layout_height="45dp"
                android:text="@string/person_name"
                android:id="@+id/name" android:layout_gravity="left|center_vertical"
                android:layout_alignRight="@+id/textView" android:layout_alignParentTop="true"
                android:layout_marginTop="77dp"/>
        <Spinner
                android:id="@+id/spinner"
                android:layout_width="111dp"
                android:layout_height="wrap_content" android:layout_alignLeft="@+id/textView"
                android:layout_alignParentTop="true" android:layout_marginTop="63dp"
                android:background="@color/red"/>
        <Button
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="side"
                android:id="@+id/submit" android:layout_gravity="center" android:layout_alignRight="@+id/textView"
                android:layout_below="@+id/side"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/right">

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:background="@drawable/brown_2"
            android:layout_alignParentLeft="true" android:layout_marginLeft="49dp"
            android:layout_alignParentTop="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/elephant_icon"
            android:layout_alignParentLeft="true" android:layout_marginLeft="14dp"
            android:layout_below="@+id/textView"/>
</RelativeLayout>